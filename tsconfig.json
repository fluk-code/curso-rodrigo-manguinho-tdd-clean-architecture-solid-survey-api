{
  "compilerOptions": {
    "outDir": "dist",                              // Diretorio onde será gerado o resultado da compiação
    "module": "commonjs",                           // Define o formato que será compilado os arquivos .js
    "target": "ES2019",                             // Define o a versão que será compilado os arquivos .js (node.green/#ES2019)
    "esModuleInterop": true,                        // 
    //"allowJs": true,                                // Incluir no dist arquivos de configurações em formato .js
    "strictNullChecks": true                        // Define que força a serem informado os tipo explicitamente.
  },
  // Arquivos a serem publicados
  "include": [  
    "src"
  ],
  // Arquivos a serem ignorados
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
